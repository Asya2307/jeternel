.cookies
    position fixed
    bottom: 0
    left 0
    width 100%
    z-index -1
    background-color default-cherry 
    opacity 0
    visibility hidden
    transition: .3s
    &.active
        visibility visible
        opacity 1
        z-index 100
    &__inner
        display flex
        align-items center
        width 100%
        justify-content space-between
        padding-top 30px
        padding-bottom 30px
    @media tablet-landscape-large
        &__inner 
            padding-left 15px
            padding-right 15px
    @media tablet-portrait
        &__inner 
            flex-direction: column
            align-items center
            text-align: center

    &__desc 
        color: #ffffff
        font-family default 
        font-size: 14px
        line-height: 24px
        a  
            color: #ffffff
            text-decoration: none 
            border-bottom 1px solid rgba(255,255,255,0.25)
            transition: .3s
            &:hover 
                border-bottom-color transparent
    @media tablet-portrait
        &__desc
           padding-bottom 20px

