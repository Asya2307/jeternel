.advantages
    position relative
    display flex
    flex-wrap nowrap
    flex-shrink 0
    width 100%
    margin-bottom 90px
    background-color default-cherry
    overflow hidden
    @media laptop
        margin-bottom 70px

    &__decoration
        position relative
        width calc(50% - 24px)
        margin-right 48px
        @media laptop
            width calc(50% - 21px)
            margin-right 42px
        @media tablet-portrait
            position absolute
            width 100%
            height 100%
            margin 0

        & svg
            position absolute
            top 60%
            left 50%
            fill dark-cherry
            animation advantages-decoration-rotation
            animation-duration 50s
            animation-iteration-count infinite
            animation-timing-function linear

    &__image
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        display block
        @media tablet-portrait
            display none

    &__text
        position relative
        width calc(40% - 24px)
        padding 171px 0 178px 0
        @media laptop
            width calc(43% - 21px)
            padding 93px 0 100px 0
        @media tablet-landscape-large
            text-align center
        @media tablet-portrait
            width calc(100% - 60px)
            margin 0 auto
        @media phone
            width calc(100% - 40px)

    &__buttons
        display flex
        flex-direction column
        align-items flex-start
        margin-top 42px
        @media tablet-landscape-large
            align-items center
        @media phone
            align-items stretch

    &__button + &__button
        margin-top 20px