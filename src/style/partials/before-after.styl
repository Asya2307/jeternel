.before-after
    width 100%
    &__slide 
        .before-after-preview
            width 100%
            text-align left
    &--index
        margin-bottom 200px
        @media laptop
            margin-bottom 160px
    &--slider 
        margin-top 150px
    &__box
        margin-top 60px
        .swiper-wrapper
            height auto
    &__container
        width calc(100% - 128px)
        margin 0 auto
        padding 80px 0 90px 0
        background-color white
        &--slider
            width 100%
            padding: 0 
            background-color transparent
            position relative
            margin-top 123px
            .infobox__title 
                padding-left 28px
        &--index 
            background-color transparent
            width 100%
            padding-top 70px
        @media desktop-medium
            width 100%
        @media laptop
            padding 62px 0 100px 0
            &--slider
                padding 0
        @media tablet-portrait
            &--slider
                margin-top 0
        @media phone
            &--index 
                .before-after-preview__props
                    display flex
                    flex-direction: column 
                    align-items center

    &__heading
        display block
        width 100%
        margin-bottom 70px
        text-align center
        @media laptop
            margin-bottom 62px

    &__list
        display flex
        flex-wrap wrap
        justify-content space-between
        width 1332px
        margin 0 auto
        padding 0
        list-style none
        &--index
            width 100%
            .before-after__item
                margin-bottom 70px
        @media laptop
            width 1078px
            &--index
                width 100%
        @media tablet-landscape-large
            width calc(100% - 80px)
            max-width 1078px
            flex-direction column
            &--index
                width 100%

        @media tablet-portrait
            width calc(100% - 60px)
            &--index
                width 100%
        @media phone
            width calc(100% - 40px)
            &--index
                width 100%

    &__item:not(:nth-last-child(1))
        @media tablet-landscape-large
            margin-bottom 80px

    &__button-wrapper
        display flex
        justify-content center
        width 100%
        margin-top 20px
        @media phone
            flex-direction column
            align-items stretch
            width calc(100% - 40px)
            margin 20px auto 0 auto
    &__popup
        position fixed
        width 100%
        height 100%
        visibility hidden
        opacity 0
        z-index -1
        transition: .3s
        top 0
        left 0
        background-color #fff
        padding-top 100px
        padding-bottom 90px
        &.active 
            opacity 1
            z-index 100
            visibility visible
        .swiper-slide 
            height auto
        &-container 
            display flex
        @media phone-portrait
            &-container 
                flex-direction: column
    &__part 
        width 392px
        margin-right 12px
        position relative
        background-position center
        background-repeat no-repeat
        background-size: contain
        &:after
            content: ''
            float left 
            padding-bottom 100%
    @media phone-portrait
        &__part 
            width 100%
            margin-right 0
            margin-bottom 12px
            &:last-child 
                margin-bottom 0
    &__desc
        position absolute 
        font-family default
        font-weight 300
        font-size 14px
        border-radius: 18px
        background-color: #ffffff
        padding: 10px 18px
        bottom: 20px
        left 20px

@media tablet-landscape-large
    .before-after
        &__scroll 
            padding-left 15px
            padding-right 15px

        


.before-after-preview
    display flex
    flex-wrap nowrap
    align-items center
    width calc(50% - 24px)
    &.swiper-slide 
        width 100%
    @media laptop
        width calc(50% - 21px)
    @media tablet-landscape-large
        flex-direction column
        width 100%

    &__images-container
        position relative
        flex-shrink 0
        width 392px
        height 392px
        margin-right 40px
        overflow hidden
        @media laptop
            width 310px
            height 310px
        @media tablet-landscape-large
            display flex
            flex-wrap nowrap
            flex-direction row-reverse
            justify-content space-between
            width 100%
            max-width 826px
            height auto
            margin 0 0 35px 0
        @media phone
            flex-direction column-reverse
            justify-content flex-start
            align-items center
            max-width 392px

    &__image-wrapper
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color white
        overflow hidden
        @media tablet-landscape-large
            position relative
            width calc(50% - 21px)
            padding-top calc(50% - 21px)
        @media tablet-portrait
            width calc(50% - 15px)
            padding-top calc(50% - 15px)
        @media phone
            width 100%
            padding-top 100%

        &:nth-child(2)
            width 0%
            transform skew(-22deg)
            transform-origin top left
            transition width .3s 0s linear
            @media tablet-landscape-large
                transform none
                width calc(50% - 21px)
                max-width 392px
                padding-top calc(50% - 21px)
                transition none
            @media tablet-portrait
                width calc(50% - 15px)
                padding-top calc(50% - 15px)
            @media phone
                width 100%
                padding-top 100%
                margin-bottom 20px

    &__image
        position absolute
        top 0
        left 0
        display block
        @media laptop
            transform scale(.85)
            transform-origin top left
        @media tablet-landscape-large
            max-width 100%
            min-width 100%
            transform none

    &__tag
        position absolute
        bottom 20px
        left 20px
        padding 8px 14px 5px 15px
        background-color white
        border-radius 16px
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 18px
        font-weight 300
        color black
        @media laptop
            padding 6px 15px 5px 15px
            font-size 14px
            line-height 17px

    &__props-list
        margin 0
        padding 0
        list-style none
        @media tablet-landscape-large
            display flex
        @media phone
            flex-direction column

    &__props-item
        @media tablet-landscape-large
            margin 0 15px
            text-align center

    &__props-item:not(:nth-last-child(1))
        margin-bottom 20px
        @media tablet-landscape-large
            margin-bottom 0
        @media phone
            margin-bottom 20px

    &__hint
        display block
        font-family "Helvetica-Neue"
        font-size 13px
        line-height 16px
        font-weight 300
        color middle-gray

    &__data
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color black
        @media laptop
            font-size 14px
            line-height 20px

    &__link
        border-bottom 1px solid rgba(0 0 0 .25)
        font-family "Helvetica-Neue"
        font-size 15px
        line-height 21px
        font-weight 300
        color inherit
        text-decoration none
        transition border .5s 0s ease
        @media laptop
            font-size 14px
            line-height 20px

        &:hover
            border-bottom 1px solid transparent

.before-after-preview__image-wrapper:nth-child(2)
    & .before-after-preview__tag
        left 165px
        transform skew(22deg)
        @media laptop
            left 134px
        @media tablet-landscape-large
            left 20px
            transform none

    & .before-after-preview__image
        transform skew(22deg)
        transform-origin top left
        @media laptop
            transform skew(22deg) scale(.85)
        @media tablet-landscape-large
            transform none
        
