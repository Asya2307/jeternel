.branch
    &__list
        display flex
        flex-direction column
        list-style-type none
        padding 0 
        margin 0
        &-item
            width 100%
            background-color default-cherry
            margin-bottom 42px
            padding-top 90px
            padding-bottom 90px
            &:last-child 
                margin-bottom 0
        @media tablet-hor
            &-item 
                padding 40px 30px 
        @media phone 
            &-item
                padding-left: 20px
                padding-right 20px   
        &-box
            display flex
            align-items center
            padding-left 226px
            padding-right 160px
            margin-left auto
            margin-right auto
            justify-content space-between

        @media laptop
            &-box
                padding-right 193px
                padding-left 180px
        @media tablet-landscape-large
            &-box
                padding-right 100px
                padding-left 100px
        @media tablet-hor 
            &-box
                padding-left 0
                padding-right 0
        @media tablet-portrait
            &-box 
                flex-direction column
                padding-left 0
                padding-right 0
        &-img
            width 100%
            min-width 310px
            &:after
                content ''
                float left 
            img 
                width 100%
                height 100%
                object-fit cover
                display block
        @media tablet-portrait
            &-img 
                margin-bottom 30px
                min-width unset 
                max-width 320px
        &-inner 
            padding-left 192px
            text-align center
            color white
        @media laptop 
            &-inner
                padding-left 144px
        @media tablet-landscape-small
            &-inner
                max-width 100%
                padding-left 70px
        @media tablet-portrait
            &-inner 
                padding-left 0
        &-wrap 
            margin-top -4px
    &__info 
        display flex
        align-items center
        justify-content center
        margin-top 15px
        &-title
            font-family serif
            font-size 36px
            text-decoration none
            span
                border-bottom 1px solid rgba(255,255,255,0.25)
                transition border-bottom-color .3s
                &:hover
                    border-bottom-color transparent
        @media phone
            &-title
                font-size: 30px;
                line-height: 34px;
        &--contacts 
            justify-content flex-start
        &-phone
            font-family serif
            font-size 26px
            display block
            margin-right 28px
        @media tablet-hor
            &-phone
                margin-right 0
                margin-bottom 15px 
            
        &-time 
            font-family serif
            font-size 26px
        &-danger 
            display: block;
            padding: 15px 15px 15px 15px;
            font-family: "Helvetica-Neue";
            font-size: 15px;
            line-height: 25px;
            border: 1px solid rgba(255,255,255,0.1);
            margin-top: 29px;
            max-width: 367px;
            margin-left: auto;
            margin-right: auto;
        &-text 
            font-family defaultFont 
            font-size 15px 
            line-height 25px  
            margin-top 43px
            margin-bottom 0
    @media tablet-portrait
        &__info
            flex-direction column
            &--contacts 
                align-items flex-start
    &__contacts
        display flex
        align-items center  
        margin-bottom 63px
        &-item 
            font-family serif
            display flex
            align-items center
            margin-right 50px
            &:last-child 
                margin-right 0
        &-title 
            color #aaaaaa
            display block
            margin-right 10px
            font-size 26px
        &-info
            font-size 26px
            text-decoration: none
            color black
    @media phone-portrait
        &__contacts
            flex-direction column
            align-items flex-start
            &-item 
                margin-right 0
                margin-bottom 20px
                &:last-child
                    margin-bottom 0
    @media screen and (max-width: 475px)
        &__contacts
            &-item 
                flex-direction column
                align-items flex-start
                

                


