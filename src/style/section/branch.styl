.branch
    &__list
        display flex
        flex-direction column
        list-style-type none
        padding 0 
        margin 0
        &-item
            width 100%
            background-color default-cherry
            margin-bottom 42px
            padding-top 86px
            padding-bottom 86px
            &:last-child 
                margin-bottom 0
        @media tablet-hor
            &-item 
                padding 40px 30px    
        &-box
            display flex
            align-items center
            max-width 950px
            margin-left auto
            margin-right auto
            justify-content space-between
        @media tablet-hor
            &-box 
                flex-direction column
        &-img
            width 100%
            max-width: 320px
            &:after
                content ''
                float left 
            img 
                width 100%
                height 100%
                object-fit cover
                display block
        @media tablet-hor
            &-img 
                margin-bottom 30px
        &-inner 
            max-width 441px
            text-align center
            color white
        @media tablet-landscape-small
            &-inner
                max-width 100%
                padding-left 30px
        @media tablet-hor
            &-inner 
                padding-left 0
        &-wrap 
            margin-top 70px
    &__info 
        display flex
        align-items center
        justify-content center
        margin-top 18px
        &-title
            font-family serif
            font-size 36px
            text-decoration none
            span
                border-bottom 1px solid rgba(255,255,255,0.25)
                transition border-bottom-color .3s
                &:hover
                    border-bottom-color transparent
        &-phone
            font-family serif
            font-size 26px
            display block
            margin-right 28px
        @media tablet-hor
            &-phone
                margin-right 0
                margin-bottom 15px 
        &-time 
            font-family serif
            font-size 26px
        &-danger 
            display block
            padding 20px 20px 18px 20px
            font-family default
            font-size 15px
            line-height 25px
            border 1px solid rgba(255,255,255,0.25)
            margin-top 28px
        &-text 
            font-family default 
            font-size 15px 
            line-height 25px  
            margin-top 50px  
    @media tablet-hor
        &__info
            flex-direction column
    &__contacts
        display flex
        align-items center  
        margin-bottom 63px
        &-item 
            font-family serif
            display flex
            align-items center
            margin-right 50px
            &:last-child 
                margin-right 0
        &-title 
            color #aaaaaa
            display block
            margin-right 10px
            font-size 26px
        &-info
            font-size 26px
    @media phone-portrait
        &__contacts
            flex-direction column
            align-items flex-start
            &-item 
                margin-right 0
                margin-bottom 20px
                &:last-child
                    margin-bottom 0
    @media screen and (max-width: 475px)
        &__contacts
            &-item 
                flex-direction column
                align-items flex-start
                

                


