.expert
    display flex
    align-items flex-start
    position relative
    background-color #ffffff
    &__wrap 
        margin-top 55px
    &__image
        position absolute
        bottom 0
        right 149px
        width 335px
        height 585px
        img
            display block
            width 100%
            height 100%
            object-fit contain
    
    
    &__inner
        display flex
        align-items flex-start
        flex-direction column 
        justify-content space-between
        max-width 713px
        padding 22px 0 27px 61px
    &__text 
        font-size 26px
        line-height 30px
        color #382f2d
        margin-bottom 40px
    &__info 
        list-style-type none
        display flex
        align-items center
        padding: 0
        margin-top 173px
        &-link
            position relative
            color: black
            display flex
            align-items center
            text-decoration none
            font-family defaultFont
            font-size 15px
            transition: color .3s
            & span:after
                content: "";
                position: absolute;
                top: 19px;
                left: 0;
                display: block;
                width: 0;
                height: 1px;
                background-color: #382f2d;
                opacity: 0.25;
                -webkit-transition: width 0.5s 0s ease;
                transition: width 0.5s 0s ease;
            span 
                position relative
            &:hover span:after
                width 100%
        &-item
            margin-right 30px
            &:last-child
                margin-right 0
        &-icon 
            width 29px
            height 29px
            margin-right 10px
    @media tablet-landscape-large
        &__info 
            flex-wrap wrap
            max-width 75%
            &-item
                margin-bottom 15px
    @media tablet-landscape-medium
        &__info 
            max-width 65%
            
    &__name 
        display flex
        align-items flex-start
        flex-direction column
        &-wrap
            font-family defaultFont
            position absolute
            font-size 15px
            right -12px
            bottom 0
            transform: rotate(-90deg) translateX(73%)
    &__position
        color #aaaaaa
    &__pattern
        width 563px
        height 425px
        background-image url(../images/pattern-prm.png)
@media tablet-landscape-small
    .expert
        &__inner 
            padding-left 25px
            padding-right 25px
            max-width: 100%
        &__info
            margin-top 40px
            &--mobile 
                display block
                position absolute
                top: 50px
                right 50px
        &__name
            &-wrap 
                position relative
                transform: none
                margin-top 40px
                margin-bottom 30px
                &--desctop 
                    display none
        &__image 
            width 200px
            height 200px
            top 40px
            right 70px
            overflow hidden
            border-radius: 50%
            &--desctop 
                display none
            img 
                display block
                object-fit: fill 
                width 100%
                height unset
            &--mobile
                position unset
                
        &__pattern 
            display none
        &__text
            max-width: 65%
@media tablet-portrait
    .expert
        &__text 
            max-width 100%
        &__info 
            width 100%
            max-width: 100%
            &--mobile 
                position unset 
                display flex
                align-items center
                margin-bottom 40px
        &__image
            &--mobile
                width 80px
                height 80px

@media phone
    .expert
        background-color transparent
        &__inner
            padding-left 0
            padding-right 0
            padding-top 0
        &__text
            margin-top 0
    
                

        
    



