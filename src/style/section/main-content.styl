.main
    &__wrap
        max-width: 992px
        margin-left auto
        margin-right auto
        padding-top 73px
        &--big 
            max-width 1270px
            margin-left auto
            margin-right auto
            width 100%
        &--biggest
            max-width 1332px
            margin-left auto
            margin-right auto
            width 100%
            padding-top 73px
        &--quiz 
            padding-top 0
        &--window 
            width 100%
            padding-left 64px
            padding-right 64px

    @media tablet-hor
        &__wrap
            padding-top 0
            
    &__content
        font-family serif
        color black
        p
            font-size 24px
            line-height 32px
        @media phone
            p
                font-size 20px
                line-height 24px
        h2
            font-size 60px
            font-weight 400
            margin-top 83px
        @media phone-portrait
            h2
                font-size 45px
                margin-top 49px
        @media phone
            h2
                font-size 32px

            
        h3
            font-size 42px
            line-height 46px
            font-weight 400
            margin-top 90px
        @media phone-portrait
            h3
                font-size 36px
        @media phone
            h3
                font-size 30px
                line-height 34px
        ul
            list-style-type none
            padding 0
            li
                display flex
                align-items flex-start
                font-size 24px
                margin-bottom 17px
                &:last-child
                    margin-bottom 0
                &:before
                    content: ''
                    display block
                    width 100%
                    max-width: 25px
                    height 1px
                    background-color bright-cherry
                    margin-right 10px
                    position relative
                    top 13px
            @media phone
                li
                    font-size 20px
                    line-height 24px
        table
            border 1px solid #e7e7e7
            background-color default-gray
            font-size 20px
            font-weight 400
            border-collapse: collapse
            text-align: left 
            margin-top 9px
            margin-bottom 4px

            td, th 
                border-bottom 1px solid #e7e7e7
                border-left 1px solid #e7e7e7
                padding 23px
                font-weight 400
            th
                white-space nowrap
        img 
            margin-top 7px
        @media phone
            img 
                width 100%
                display block
    &__title
        font-size 90px
        font-weight 400
        line-height 94px
        margin-top 30px
        margin-bottom 50px
        &--inside
            font-size 90px
    @media tablet-hor
        &__title
            font-size 70px
            line-height 1.1
    @media phone-portrait
        &__title
            font-size 56px
            line-height 1.1
        img 
            width 100%
    @media phone
        &__title
            font-size 42px
            line-height 1.1  
    &__box
        position relative
    &--prm
        background-color default-cherry

    

.container 
    @media desktop-medium
        padding 25px 64px 28px 64px
    @media laptop
        padding 20px 64px 23px 64px
    @media tablet-landscape-large
        padding 20px 40px 23px 40px
    @media tablet-portrait
        padding 20px 30px 23px 30px
    @media phone
        flex-direction row-reverse
        justify-content space-between
        padding 20px 20px 23px 20px

  
.show__more
    display flex
    align-items center
    justify-content center









