.history 
    margin-top 100px
    &__title 
       font-size 50px
       line-height 54px
       font-family serif 
       display block
       margin-bottom 50px
    &__item
        display flex
        border-top 1px solid #e7e7e7
        &-text 
            position relative
            padding 37px 100px 37px 0
            width 100%
            width 88%
            font-size 26px
            line-height 34px
            &:after
                content ''
                position absolute
                top 0
                right 0
                height 80%
                width 1px
                background-color #e7e7e7
        &-date 
            width 12%
            padding-top 27px
            padding-left 10px
            padding-right 10px
            text-align: center
            span 
                font-family serif
                font-size 60px

       
        