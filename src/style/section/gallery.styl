.gallery
    &__inner
        display flex
        flex-wrap wrap
        margin: 0 -12px
    &__item
        width calc(100%/5 - 24px)
        margin 11px
        height 164px
        background-position center
        background-size cover
        background-repeat no-repeat
        border 1px solid #e7e7e7

        &--popup 
            height unset
            img 
                display block
                margin auto 
                padding 11px
    @media tablet-hor
        &__item
            width calc(100%/2 - 24px)
    @media phone
        &__item
            width 100%
            margin 12px 0
            height 300px


        