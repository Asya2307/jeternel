.gallery
    &__inner
        display flex
        align-items stretch
        flex-wrap wrap
        margin: 29px -6px -6px -6px;
    &--index
        margin-top 94px
        & + .publication .publication__inner
            margin-top 47px
    &__content 
        h2
            margin-bottom 48px
            margin-top 0
            font-size 50px
            line-height 54px
    @media screen and (max-width: 1366px) 
        &__content 
            h2 
                font-size: 42px
    @media phone
        &__content 
            h2 
                font-size: 32px
                line-height 36px
    &--inside 
        margin-top 100px
        &+.gallery--inside
            margin-top 90px
    &__item
        position relative
        text-decoration: none
        width calc(100%/5 - 12px)
        margin 6px
        background-position center
        background-size cover
        background-repeat no-repeat
        img
            display block
            width 100%
            object-fit contain
        iframe 
            display none
        &--ser
            background-size: contain
            height unset
            display flex
            align-items center
            justify-content center
            border 1px solid #e7e7e7
            padding: 11px
            &:after
                content ''
                float left 
                padding-bottom 100%
            img 
                margin-left auto
                margin-right auto
                display block
        &--popup 
            height unset
            background-image none
            position relative
            border: 1px solid #e7e7e7;
            &:after
                content: ''
                float left
                padding-bottom 100%
            img 
                position absolute
                display block
                margin auto 
                padding 11px
                width 100%
                height 100%
                object-fit contain 
        &--video:after
            content: 'Видео'
            display block
            position absolute
            bottom: 20px
            left 20px
            font-family default 
            color black 
            background-color white 
            font-size: 13px
            border-radius: 17px
            padding: 9px 17px
        &--map:after
            content: 'Виртуальный тур'
            display block
            position absolute
            bottom: 20px
            left 20px
            font-family default 
            color black 
            background-color white 
            font-size: 13px
            border-radius: 17px
            padding: 9px 17px
    @media tablet-portrait
        &__inner 
            margin: 0 -6px
        &__item 
            width: calc(100%/3 - 12px)
            margin: 6px
    @media phone
        &__item 
            width: calc(100%/2 - 6px)
            margin: 3px
        &__item
            &--popup 
                height unset
@media phone 
    .gallery 
        &__title 
            text-align: center

        