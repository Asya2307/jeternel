.sections
    display flex 
    &__wrap
        max-width 1334px
        margin 70px auto 93px auto
        width 100%
        &--inside
            margin-top 100px
    &__inner 
        display flex
        flex-wrap wrap 
        margin: -24px
    @media tablet-landscape-large
        &__inner 
            margin-left 0
            margin-right 0
    &__item 
        position relative
        display flex
        align-items center
        width calc(100%/2 - 48px)
        margin 24px
        transition 1s
        position relative
        padding-bottom 18%
        img 
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            object-fit cover
            transition: transform .6s
        
        &:hover 
            background-size 110%
        
    @media tablet-hor
        &__item
            width calc(100%/2 - 12px)
            margin 6px 
    @media phone
        &__item
            width 100%
            margin-left 0
            margin-right 0
            padding-bottom 39%
            margin-bottom 10px
    &__link 
        position absolute
        top 0
        left 0
        width 100%
        height 100%        
        font-family serif 
        font-size 36px
        color white
        display flex
        align-items center
        justify-content center
        z-index 1
        width 100%
        height 100%
        text-decoration none
        overflow hidden
        &:after
            content ''
            position absolute            
            display block
            width 100%
            height 100%
            background-color rgba(56, 47, 45, 0.5);
            top 0
            left 0
        span
            position relative
            z-index 1
        &:hover
            img 
                transform: scale(1.1)
                transform-origin: center
    @media tablet-portrait
        &__link
            font-size 24px

            

        
