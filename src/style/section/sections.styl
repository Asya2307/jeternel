.sections
    display flex 
    &__wrap
        max-width 1334px
        margin 70px auto
        width 100%
    &__inner 
        display flex
        flex-wrap wrap 
        margin: -24px
    &__item 
        position relative
        display flex
        align-items center
        width calc(100%/2 - 48px)
        margin 24px
        height 250px
        background-position: center
        background-size 100%
        background-repeat no-repeat
        transition 1s
        &:after
            content ''
            position absolute            
            display block
            width 100%
            height 100%
            background-color rgba(0,0,0,0.5)
            top 0
            left 0
        &:hover 
            background-size 110%
    &__link 
        font-family serif 
        font-size 36px
        color white
        position relative
        display flex
        align-items center
        justify-content center
        z-index 1
        width 100%
        height 100%
        text-decoration none

        
