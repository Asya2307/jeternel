.special
    margin-top 80px
    &__slider 
        &-inner
            position relative
            margin-top 70px
    &__item
        display flex
        flex-direction column 
        align-items center
    &__title
       letter-spacing 3.12px
       line-height 23px 
       color black
       font-size 13px
       text-transform uppercase
       text-align center
       display block
       padding: 40px 40px 20px 40px
    @media phone
        &__title 
            padding: 20px 0
    &__img 
        height 400px
        display flex
        align-items flex-end
    @media tablet-hor
        &__img 
            height auto
            img 
                width 100%

    