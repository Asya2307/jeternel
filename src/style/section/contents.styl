.contacts
    padding 0
    display flex
    flex-wrap wrap
    align-items stretch
    list-style-type none
    margin-left -95px
    margin-right -95px

    &__item
        width calc(100%/2 - 190px)
        margin-left 95px
        margin-right 95px
        margin-bottom 75px
    @media tablet-landscape-small
        &__item 
            width 100%
            margin-left 0
            margin-right 0
    &__link 
        text-decoration none 
        color black
        font-size 36px
        line-height 40px
        span 
            border-bottom 1px solid rgba(0,0,0,0.25)
            transition border-bottom-color .3s
        &:hover
            span 
                border-bottom-color transparent
    @media phone 
        &__link
            font-size 28px
    &__info 
        display block
        font-size 15px
        font-family default
        margin-top 20px
@media tablet-landscape-small
    .contacts
        margin-left 0
        margin-right 0

.requisites
    font-family serif
    margin-top 93px
    margin-bottom 55px
    &__title
        font-size 36px
        font-family serif
    &__list 
        display flex
        flex-wrap wrap
        align-items center
        padding 0
        margin-top 76px
    @media tablet-hor
        &__list 
            flex-direction column 
            align-items flex-start
    &__item 
        margin-right 50px
        display flex
        align-items center
        font-size 26px
        margin-bottom 38px
        &-title 
            padding-right 10px
            color middle-gray
    @media tablet-hor
        &__item 
            flex-direction column 
            align-items flex-start






