.blog
    &__categories
        display flex
        flex-wrap wrap
        margin 0 -24px
        &-item
            position relative
            display flex
            align-items center
            justify-content center
            width calc(100%/2 - 48px)
            margin 24px
            background-color white
            height 550px
            overflow hidden
            &--resourses
                background-color default-cherry
                &:after
                    content ''
                    display block
                    position absolute
                    top 0
                    left 0
                    right 0
                    bottom 0
                    width 80%
                    height 80%
                    background-image url(../images/pattern-resourses.png)
                    background-position center
                    background-repeat no-repeat
                    background-size contain
                    margin auto
                    transform-origin center
                    transition 1s
                &:hover:after
                    transform: rotate(70deg) scale(1.7)
        @media tablet-landscape-medium
            &-item
                margin-left 0
                margin-right 0
                width 100%
                padding: 150px 100px;
                height auto
                &--resourses
                    padding-left 0
                    padding-right 0
        @media phone
            &-item
                padding-left 40px
                padding-right 40px
                &--resourses
                    padding-top 40px
                    padding-bottom 40px
                
        &-link 
            position absolute
            top 66px
            left 80px
            display flex
            align-items center
            font-family serif
            font-size 36px
            line-height 40px
        @media tablet-landscape-medium
            &-link
                left 0
                right 0
                justify-content center
        &-heading 
            color black
            text-decoration none
            span 
                border-bottom 1px solid rgba(0,0,0,0.25)
        &-count 
            color bright-cherry
            display block
            margin-left 10px
        @media phone
            &-link
                font-size 28px
                line-height 32px
                padding-left 20px
                padding-right 20px
        &-box
            position relative
            display flex
            flex-direction column
            max-width 379px
            margin-left auto
            margin-right auto
            font-family default
            text-align center
            z-index 1
            &--resourses
                max-width unset
                padding-left 20px
                padding-right 20px
        &-title
            font-size 13px
            color black
            text-transform uppercase
            letter-spacing 3.12px
            line-height 23px
            &--prm 
                color white
                text-decoration none 
                font-family serif
                text-transform none
                font-size 36px
                letter-spacing normal
                line-height 40px
                span 
                    border-bottom 1px solid rgba(255,255,255,0.25)
                    transition: .3s
                &:hover
                    span 
                        border-bottom-color transparent
            @media phone
                &--prm
                    font-size 28px
                    line-height 32px 
        &-subtitle
            font-size 15px
            line-height 25px
            margin-top 8px
            display block
            &--prm 
               color white 
               margin-top 42px
    &__profile
        position absolute
        bottom 0
        transform translateY(calc(100% + 30px))
        left 0
        right 0
        width 100%
        text-align center
        display flex
        flex-direction column
        align-items center
        margin-top 27px

        &-auth 
            width 50px
            height 50px
            background-position center
            background-repeat no-repeat
            background-size contain
            border none
            background-color transparent
            border-radius 50%
            padding 0
            position relative
            z-index 1

            &:hover ~ .blog__profile-name
                opacity 1
                transform translateY(0)
                visibility visible
        
        &-name 
            position absolute
            opacity 0
            transform translateY(-100%)
            transition .8s
            bottom -35px
            visibility hidden
            font-size: 13px
            line-height: 15px
            &--inside 
                transform translateY(0)
                position unset
                opacity 1
                font-family default
                font-size 13px
                line-height 15px
                margin-top 19px
                visibility visible
        &--art
            position relative
            transform translate(0)
            opacity 1
    @media tablet-hor
        &__profile
            display flex
            align-items center
            &--art
                margin-right 20px
    @media phone
        &__profile
            &--art
                margin-right 0
    @media phone
        &__auth
            flex-direction column
            align-items center
            width 100%

    &__inside
        &-inner
            display flex
            align-items flex-start
        @media tablet-hor
            &-inner
                flex-direction column
        &-info
            font-size 26px
            padding-right 20px
            span 
                display block
                margin-top 30px
            img 
                margin-bottom 20px
        @media tablet-hor
            &-info
                padding-right 0
    @media tablet-hor
        &__auth
            display flex
            align-items center
    @media phone
        &__auth
            flex-direction column
            align-items center
            width 100%
    

        
.social
    margin-top 40px
    &__list
        padding 0
        display flex
        flex-direction column
        list-style-type none
        align-items center
        &-item
            display block
            margin-bottom 1px
            width 89px
            height 89px
            &:last-child
                margin-bottom 0
        @media tablet-hor 
            &-item
                margin-bottom 0
                margin-right 1px
                &:last-child
                    margin-right 0
        &-link
            display flex
            width 100%
            height 100%
            background-color white
            background-position center
            background-repeat no-repeat
            transition: .5s
            &:hover
                opacity 0.5
            &--vk
                background-image url(../images/icons/vk.svg)
            &--fb
                background-image url(../images/icons/fb.svg)
    @media tablet-hor
        &__list 
            flex-direction row

    



