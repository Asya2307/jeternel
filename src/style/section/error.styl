.error__block
    width 100%
    background-color default-cherry
    &-inner
        display flex
        flex-direction column
        justify-content center
        font-family serif
        color white
        text-align center
        max-width 700px
        align-items center
        height 100vh
        margin-left auto
        margin-right auto
    @media tablet-landscape-large
        &-inner
            height unset
            padding-top 100px
            padding-bottom 100px
    @media phone
        &-inner
            padding-top 70px
    &-title
        display block
        font-size 240px
        margin-bottom 15px
        text-transform uppercase
        font-weight 300
    @media screen and (max-width: 1366px)
        &-title
            font-size: 200px
            margin-bottom: 15px;    
    @media phone-portrait
        &-title
            font-size 150px
    
    &-subtitle 
        display block
        margin-bottom 24px
        font-size: 50px
        line-height 54px
    @media screen and (max-width: 1366px)
        &-subtitle
            font-size: 42px
            line-height: 46px
    @media phone-portrait
        &-subtitle
            font-size 35px
            margin-bottom 0
    @media phone
        &-subtitle
            font-size 30px
    &-text 
        font-size: 26px;
        line-height 34px
        font-weight 300
        a
            color white 
            text-decoration none
            span
                border-bottom 1px solid white
                transition border-bottom-color .3s
            &:hover
                span 
                    border-bottom-color transparent
    @media screen and (max-width: 1366px)
        &-text
            font-size: 24px;
            line-height 32px
    
