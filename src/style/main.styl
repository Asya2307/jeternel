@import "helpers/vars.styl"

*
    box-sizing border-box
    outline none

button
a
    cursor pointer 

body
    min-width 320px
    color black
       
.content
    background-color #fafafa
    &--prm
         background-color default-cherry

.main
    margin-bottom 100px
    @media laptop
        margin-bottom 70px

.ps {
    overflow: hidden!important;
    overflow-anchor: none;
    -ms-overflow-style: none;
    touch-action: auto;
    -ms-touch-action: auto;
}

.block__title 
    font-size 50px
    line-height 54px
    color black
    font-family serif
    font-weight 400

.slider__nav 
    position: absolute;
    top: 0;
    right: 0;
    transform: translateY(-112px)
    &-item 
        background-color transparent 
        border none
        padding 0
        margin-right 60px
        cursor pointer
        &:last-child
            margin-right 0
    &--before-after
        transform: translate(0)
@media phone
    .slider__nav 
        position relative
        transform: translate(0)
        display flex
        justify-content center
        margin-top 30px
            

.see__more
    margin-top 20px
    &--center 
        display flex
        justify-content center

