@import "helpers/vars.styl"

*
    box-sizing border-box
    outline none

button
a
    cursor pointer 

html 
    scroll-behavior: smooth


body
    min-width 320px
    color black
    transition: .3s
    font-weight: 300
    font-family: serif
       
.content
    position: relative
    background-color #fafafa
    &--prm
         background-color default-cherry

.main
    margin-bottom 100px
    @media laptop
        margin-bottom 70px

.ps {
    overflow: hidden!important;
    overflow-anchor: none;
    -ms-overflow-style: none;
    touch-action: auto;
    -ms-touch-action: auto;
}

.block__title 
    font-size 50px
    line-height 54px
    color black
    font-family serif
    font-weight 300
    &--tabs
        margin-bottom 0
@media screen and (max-width: 1366px)
    .block__title 
        font-size 42px
@media phone
    .block__title 
        font-size 32px
        line-height 36px
    

.slider__nav 
    position: absolute;
    top: 0;
    right: 0;
    transform: translateY(-112px)
    &-item 
        background-color transparent 
        border none
        padding 0
        margin-right 60px
        cursor pointer
        &:last-child
            margin-right 0
    &--before-after
        transform: translateY(39%)
@media phone
    .slider__nav 
        position relative
        transform: translate(0)
        display flex
        justify-content center
        margin-top 30px
        &--em
            position: absolute;
            width 100%
            justify-content space-between
            left 0
            .slider__nav-item--prev
                position absolute
                left -15px
                margin: 0
            .slider__nav-item--next
                position absolute
                right -15px
                margin 0 

.see__more
    margin-top 20px
    &--center 
        display flex
        justify-content center
    &--margin 
        padding-top 77px
    &--gallery 
        margin-top 50px
@media tablet-landscape-small
    .see__more 
        display flex
        justify-content center

&::marker 
    color: transparent

.video 
    width 100%
    

