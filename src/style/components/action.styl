.action
    &__slider 
        position relative
        width 100%
        height 100%
        max-height: 451px
        &--notext
            max-height: 310px
        
        &-inner
            display flex
            align-items stretch
            margin-top 100px
            margin-bottom 86px
            margin-left -24px
            margin-right -24px
            &--main
                margin-bottom 70px
            &--index
                margin-top 100px
                margin-bottom 70px            
        @media screen and (max-width: 1024px)
            &-inner
                flex-direction: column
        @media tablet-landscape-large
            &-inner 
                margin-left 0
                margin-right 0
                flex-direction: column

        &-box
            background-color transparent 
            display flex
            align-items center
            margin 0
            width 100%
            color black
            padding-left 91px
            padding-right 91px
            justify-content space-between
            padding-top 0
            padding-bottom 30px
            margin-top: 26px;
            margin-bottom: -6px;
            .swiper-wrapper
                align-items center
                height unset
                width unset
            .action__slider-arrow
                svg 
                    path 
                        fill black 
                &--left 
                    left 21px
                &--right
                    right 21px
            
            @media phone-portrait
                .action__slider-arrow
                    top 155px
            @media phone
                .action__slider-arrow
                    top: 106px
                    &--left 
                        left 5px
                    &--right 
                        right 5px
            .action__slider-content
                padding-left 0
                max-width: 508px
                width 100%
                padding-right 0
                margin-bottom 0
            @media tablet-landscape-small
                .action__slider-content
                    max-width 100%
            @media tablet-landscape-small
                .action__slider--notext
                    display none
            .action__slider
                max-height: 310px
                max-width: 100%
                margin-left 0
                margin-right 0
                padding-left: 150px
                .action__slider-img
                    background-position center
                    background-size: cover
                    background-repeat no-repeat
            @media phone-portrait 
                padding-left 0
                padding-right 0 
            &--main
                margin 0 24px
                background-color default-cherry
                padding-top 62px
                padding-bottom 125px
                color white
                flex-direction: column
                width calc(100%/2 - 48px)
                padding-left 0
                padding-right 0
                margin-left 24px
                margin-right 24px
                margin-top 0
                margin-right 0
                .action__slider
                    position relative
                    width 100%
                    height 100%
                    max-height 451px
                    max-width: 100%
                    padding-left 0
                @media phone 
                    .action__slider
                        max-height: 474px
                .action__slider-arrow
                    svg 
                        path 
                            fill white
                    &--left 
                        left 55px
                    &--right
                        right 55px
                @media phone
                    .action__slider-arrow
                        top: 106px
                        &--left 
                            left 5px
                        &--right 
                            right 5px
                .action__slider-title
                    font-size: 36px
                    line-height 40px
                    margin-bottom 30px

                .action__slider-desc
                    padding-left 15px
                    padding-right 15px
            @media tablet-landscape-large
                 &--main
                     width 100%
                
            & + & 
                width calc(100%/2 - 48px)
                background-color default-cherry
                color white
                padding-top 62px
                padding-bottom 125px
                flex-direction: column
                padding-left 0
                padding-right 0
                margin-left 24px
                margin-right 24px
                margin-top 0
                margin-right 0
                @media phone-portrait
                    .action__slider-arrow
                        top 155px
                .action__slider-title
                    font-size: 36px
                    line-height 40px
                .action__slider-content
                    margin-bottom 60px
                .action__slider
                    position relative
                    width 100%
                    height 100%
                    max-height 451px
                    padding-left 0
                    .action__slider-img
                        background-position center
                        background-size: cover
                        background-repeat no-repeat
                .action__slider--notext
                    max-height 310px
                @media phone-portrait 
                    padding-left 0
                    padding-right 0 
                .action__slider-arrow
                    svg 
                        path 
                            fill white
                    &--left 
                        left 55px
                    &--right
                        right 55px
                @media phone
                    .action__slider-arrow
                        top: 106px
                        &--left 
                            left 5px
                        &--right 
                            right 5px
                .action__slider-desc
                    padding-left 15px
                    padding-right 15px
                .action__slider-title
                    margin-bottom 61px
            @media tablet-landscape-large
                 & + &
                     width 100%
                     margin-left: 0
                     margin-right 0
              @media tablet-landscape-small
                & + &
                    padding-bottom 20px
            
                
        @media tablet-landscape-large
            &-box
                width 100%
                margin-left 0
                margin-right 0
                margin-bottom 20px
                &--row
                    flex-direction: column
                    .action__slider-content
                        padding-right 0
                        padding-bottom 40px

        &-title
            display block
            text-align center
            font-size 50px
            line-height 54px
            margin-bottom 30px
        @media phone-portrait
            &-title
                font-size 36px
                line-height 40px
        &-slide 
            max-width:310px
            display: flex
            align-items: center
            flex-direction: column
            overflow hidden
        @media phone-portrait
            &-slide
                justify-content start
        @media phone
            &-slide
                padding: 0 40px
        &-img
            width 100%
            &:before
                content: ''
                display block
                width 100%
                padding-bottom 100%
            img 
                display none
        &-arrow
            position absolute
            top 147px
            width 35px
            height 18px
            background-color transparent
            border none
            padding: 0
            z-index 1
            svg
                width 100%
                height 100%
                path 
                    fill: #ffffff
            &--left
                left 21px
            &--right
                right 21px
                transform rotate(180deg)
        @media phone-portrait
            &-arrow 
                top: 350px
                &--left 
                    transform: rotate(-90deg)
                    left calc(50% - 100px)
                &--right 
                    transform: rotate(90deg)
                    right calc(50% - 100px)
        @media phone
            &-arrow 
                top: 150px
                &--left 
                    left 5px
                &--right 
                    right 5px
                    

        &-head 
            font-size 13px
            font-family defaut
            text-transform uppercase
            font-family default
            text-align center
            margin-top 40px
            margin-bottom 15px
            letter-spacing: 3.12px
        
        &-text
            font-family default
            font-size 15px
            line-height 25px
            text-align center
            display block
        @media phone-portrait
            &-text
                padding-left 15px
                padding-right 15px
        &-show
            display flex
            justify-content center
            margin-top 65px
        @media phone
            &-show
                margin-top 20px
        &-content 
            padding-left 129px
            padding-right 129px
            text-align: center
            &--about
                margin-bottom 68px
        @media phone-portrait
            &-content 
                padding-left 15px
                padding-right 15px
        &-desc 
            font-family default
            margin-bottom 17px
            font-size 15px
            line-height 25px
            padding-left 15px
            padding-right 15px
            &:last-child 
                margin-bottom 0
    @media phone-portrait
        &__slider 
            max-height 550px
    @media phone
        &__slider 
            max-height 600px










                
            