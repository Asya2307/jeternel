.tabs
    margin-top 100px
    &__wrap 
        display flex
        align-items strech 
        margin-top 50px
    &__switch 
        display flex
        flex-direction: column
        list-style-type: none
        max-width: 278px
        width 100%
        padding 0
    @media tablet-portrait
        &__switch 
            max-width: 100%
    &__button 
        background-color white
        transition: .3s
        color black
        font-size 20px
        padding: 20px 30px
        border: none
        width 100%
        text-align: left
        &:hover, &.active 
            background-color bright-cherry
            color: white 
    &__inner 
        position relative
        width 100%
        table
            width 100%
        &-item 
            position absolute
            padding-left 40px
            opacity 0
            z-index -1
            top 0
            left 0
            width 100%
            visibility hidden
            transition: .3s
            &.active
                position relative
                opacity 1
                z-index 1
                visibility visible
@media tablet-portrait
    .tabs 
        &__wrap 
            flex-wrap wrap
        &__switch
            justify-content space-between
            flex-wrap: wrap 
            flex-direction: row
        &__item
            width 48%
            margin-bottom 10px
        &__inner
            &-item 
                padding-left 0
@media phone
    .tabs 
        &__switch
            flex-direction: column
        &__item
            width 100%
            margin-bottom 10px
        
    


    
     
        