.reviews
    margin-top 90px
    &__inner
        display flex
        flex-wrap wrap 
        flex-direction column
        margin-top 60px
    &--problem
        margin-top 62px
        .block__title
            margin-top 0
            margin-bottom 60px

    &__item
        padding: 43px 59px 53px 59px
        margin-bottom 12px
        background-color white

        &:last-child 
            margin-bottom 0
    @media tablet-landscape-small
        &__item
            padding 30px 35px 17px 35px 
    @media phone
        &__item 
            padding 20px
    &__text
        font-family serif
        p
            font-size 24px
            line-height 32px
            margin 0 0 26px 0
            &:last-child
                margin-bottom 0
    @media phone 
        &__text 
            p
                font-size 20px
                line-height 24px
    &__bottom
        display flex
        align-items center
        justify-content space-between
        margin-top 40px
    @media tablet-hor
        &__bottom
            flex-direction column
            align-items flex-start
    &__tags
        display flex
        flex-wrap wrap
        &-item
            border-radius 17px
            border 1px solid #F0F0EF
            margin-right 12px
            font-size 14px
            line-height 15px
            padding 9px 18px
            text-decoration none
            color #382f2d
            font-family defaultFont
            transition: .3s
            &:last-child
                margin-right 0
            &:hover 
                background-color #F0F0EF
                border-color #F0F0EF
    @media laptop
        &__tags
            &-item 
                font-size 13px
    @media tablet-landscape-small
        &__tags 
            margin-bottom 20px
    @media tablet-hor
        &__tags
            &-item 
                margin-bottom 12px
    @media phone
        &__tags
            &-item
                padding 5px 11px
    &__info
        font-size 13px
        font-family defaultFont

    &--index 
        margin-bottom 100px
        margin-top 70px
@media phone-portrait
    .reviews
        margin-top 50px


    