.faq 
    font-family serif
    margin-top 90px
    .infobox__title
        margin-bottom 60px
    &__text 
        margin-top: 31px
    &--problem 
        margin-top 70px
    &--inner
        margin-top 50px
    &__inner
        display flex
        flex-direction column
    &__item
        position relative
        border-bottom 1px solid #e7e7e7
        padding-bottom 12px
        overflow auto
        &:first-child .faq__box 
            border-top 1px solid #e7e7e7
        &:first-child .faq__box.active
            border-top 1px solid transparent
        &.active
            top -2px
        &:last-child 
            border-bottom none
            
    &__box
        padding 43px 60px 35px 60px
        transition-duration .3s
        &.active
            border-top 1px solid transparent
            background-color #ffffff
            position relative
            top -1px
            & .faq__container
                opacity 1
                position relative
                visibility visible
                z-index 1
                transition: opacity .3s
    @media laptop
        &__box 
            padding-top 20px
            padding-bottom 20px
    @media tablet-portrait
        &__box 
            padding-left 30px
            padding-right 30px
    @media phone
        &__box 
            padding-left 20px
            padding-right 20px


    &__title
        display inline
        font-size 36px
        line-height 40px
        background-color transparent
        border: none 
        padding 0
        text-align left
        word-break break-word
        color black
        span  
            border-bottom 1px dotted rgba(0,0,0,0)
            transition-duration .3s
        &:hover 
            span 
                border-bottom 1px dotted rgba(0,0,0,0.25)
        
        &-inner
            display flex
            justify-content space-between
            align-items center
            margin-bottom 16px
            .common__button
                height 90px
                top -16px
        @media tablet-landscape-small
            &-inner 
                flex-direction column
                align-items flex-start
                margin-bottom 60px
                .main__title
                    margin-bottom 20px
                .common__button
                    height unset
                    top 0
                    left 0
        @media tablet-hor
            &-inner
                &--p0
                    margin-bottom 20px
        &--nolink
            span 
                &:hover 
                    border-bottom 1px solid rgba(0,0,0,0)
    @media tablet-portrait 
        &__title 
            font-size 26px
            line-height 30px 
    &--index 
        margin-top 0
        margin-bottom 100px
 
    &__container
        display flex
        flex-direction column
        font-size 26px
        line-height 34px
        padding-bottom 12px
        opacity 0
        position absolute
        bottom 0
        z-index -1
    &__bottom
        display flex
        align-items center
        margin-top 15px
    &__auth
        display flex
        align-items center
        &-profile 
            width 50px
            height 50px
            border-radius 50%
            background-position center
            background-size cover
            background-repeat no-repeat
            margin-right 15px
        &-inner 
            display flex
            flex-direction column 
            font-size 14px
            line-height 18px
            font-family defaultFont 
        &-name  
            display block
        &-position 
            color #aaaaaa
    &__date 
        font-size 14px
        font-family defaultFont
        margin-left auto
    &__button 
        margin-top 17px
        &--center 
            display flex
            justify-content center
    @media tablet-landscape-small
        &__button 
            display flex
            justify-content center
@media phone-portrait 
    .faq 
        &__text
            font-size 26px
            line-height 30px
        &__bottom 
            flex-direction: column
            align-items flex-start
        &__auth
            margin-top 20px
            margin-bottom 5px
        &__date
            margin-left 0
@media phone
    .faq
        &__text
            font-size 20px
            line-height 24px

