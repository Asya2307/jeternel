.faq 
    font-family serif
    margin-top 100px
    &__inner
        display flex
        flex-direction column
    &__item
        position relative
        border-bottom 1px solid #e7e7e7
        padding-bottom 12px
        overflow auto
    &__box
        padding 50px 60px 35px 60px
        transition .5s
        &.active
            background-color #ffffff
            & .faq__container
                opacity 1
                position relative
                visibility visible
                z-index 1

    &__title
        display inline
        font-size 36px
        line-height 40px
        background-color transparent
        border: none 
        padding 0
        text-align left
        span  
            border-bottom 1px solid rgba(0,0,0,0)
            transition-duration .3s
            &:hover 
                border-bottom 1px solid rgba(0,0,0,0.1)
 
    &__container
        display flex
        flex-direction column
        font-size 26px
        line-height 34px
        padding-bottom 12px
        opacity 0
        position absolute
        bottom 0
        z-index -1
        transition: .3s
    &__bottom
        display flex
        align-items center
    &__auth
        display flex
        align-items center
        &-profile 
            width 50px
            height 50px
            border-radius 50%
            background-position center
            background-size cover
            background-repeat no-repeat
            margin-right 15px
        &-inner 
            display flex
            flex-direction column 
            font-size 14px
            line-height 18px
            font-family default 
        &-name  
            display block
        &-position 
            color #aaaaaa
    &__date 
        font-size 14px
        font-family default
        margin-left auto
    &__button 
        margin-top 60px
