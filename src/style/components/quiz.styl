.quiz
    position relative 
    z-index 1
    &__wrap 
        position relative
        background-color default-cherry
        overflow hidden
        &:after 
            content: ''
            position absolute
            background-image url(../images/pattern-resourses.png)
            width 706px
            height 504px
            top 0
            right 0
            background-position center 
            background-repeat no-repeat
            background-size contain
            transform translateX(-40%) translateY(-27%)
    &__inner 
        position relative
    &__step 
        position relative
        padding-top 66px
        padding-bottom 66px
    &__part
        display flex
        flex-direction column 
    &__top
        display flex
        align-items center
        justify-content space-between
        margin-bottom 60px
    &__title
        font-size 32px
        line-height 36px
        color white 
        margin: 0
    &__count
        position absolute
        right 0
        top: 55px 
        display flex
        align-items center
        color white 
        font-size 32px
        &--current
            &:after 
                content '/' 
    &__button 
        display flex
        flex-direction: column
        align-items center
        
        margin-right 12px
        &:last-child 
            margin-right 0
        span 
            padding-top 65px
        &-inner 
            display flex
        &--icon 
            width 296px 
            &:after 
                content ''
                float left 

.btn__forward 
    position absolute
    background-color transparent 
    border none
    padding 0
    height 18px
    width 35px
    transform: rotate(-90deg)
    top: 74px
    left -100px
    svg  
        width 100%
        height 100%
        path 
            fill white
    &:disabled 
        display none
