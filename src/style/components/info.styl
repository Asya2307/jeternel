.infobox
    margin-top 90px
    &__title
        font-size 50px
        line-height 54px
        font-weight 400
        margin-bottom 58px
        &--part
            margin-bottom 51px
        
    @media phone-portrait
        &__title
            font-size 45px
    @media phone
        &__title
            font-size 32px
            line-height 36px
    &__inner
        display flex
        flex-wrap wrap 
        &--part 
            margin 0 -24px
        &--half
            justify-content space-between
            margin 0 -24px
    @media tablet-hor
        &__inner 
            &--part 
                margin-left 0
                margin-right 0
            &--half 
                margin-left 0
                margin-right 0
    &__item
        width 100%
        padding: 45px 64px 50px 59px
        font-family serif 
        font-size 36px
        line-height 40px
        border-top: 1px solid #e7e7e7
        &--part 
            width calc(100%/3 - 48px)
            margin: 0 24px
            padding 32px 49px 24px 30px
            font-size 26px
            line-height 30px
            margin-bottom 0
        &--half 
            display flex
            align-items center
            justify-content space-between
            flex-wrap wrap
            font-size 26px
            width calc(100%/2 - 48px)
        &--backdrop
            padding: 0
            margin: 10px 24px 1px 24px
    @media tablet-landscape-large
        &__item 
            padding: 20px 0
            &--half 
                width 100%
                margin-left 0
                margin-right 0
    &__link 
        color: black
        text-decoration: none
        border-bottom 1px solid transparent 
        text-decoration: none
        transition: border-bottom-color .3s
        &--backdrop 
            position relative
            display block
            padding 32px 49px 36px 49px
            text-decoration: none
            color: black
            span 
                position relative 
                z-index 1
            &:after
                content '' 
                position absolute
                top -1px
                left 0
                display block
                width 100%
                height 0
                transition: height .3s
                background-color #fff
            &:hover:after 
                height 100%
        &--row 
            display flex
            justify-content space-between
            width 100%

        &:hover
            border-bottom-color rgba(56,47,45,0.25)
        &--nohover
            &:hover
                border-bottom-color transparent
    @media tablet-landscape-large
        &__link
            &--backdrop 
                padding-left 10px
                padding-right 10px

    @media tablet-portrait
        &__link 
            font-size 26px
            line-height 30px
    @media phone
        &__link 
            &--row
                flex-direction: column
            &--backdrop 
                padding-top 15px
                padding-bottom 15px


    @media tablet-hor
        &__item 
            &--part 
                width 100%
                margin-left 0
                margin-right 0
                padding-left 0
                padding-right 0
    &__list 
        font-family default
        list-style-type none
        padding-left 0
        margin-top 15px
        &-item
            margin-bottom -1px
            &:last-child
                margin-bottom 0
        &-link
            text-decoration: none
            span
                color: black
                font-weight 300
                font-size 15px
                transition: .3s
                border-bottom 1px solid transparent
            &:hover
                span 
                    border-bottom-color  rgba(56, 47, 45, .25)

    &--index 
        margin-top 80px
    &--apply
        margin-top 170px
    



            

