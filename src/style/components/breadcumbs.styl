.breadcumbs
    font-family default
    font-size: 13px
    overflow hidden
    white-space nowrap
    &__list
        display flex
        align-items center
        list-style-type none
        padding 0
    &__item
        display flex
        align-items center
        &:after
            content: '/'
            color middle-gray
            margin 0 5px
            font-size 11px
        &:last-child:after
            content: none
    &__link
        position relative
        color middle-gray
        cursor pointer
        &:before
            content: ''
            position absolute
            bottom: 0
            left 0
            display block
            width 100%
            height 1px
            background-color middle-gray
            opacity: 0.25
            transition: opacity 0.5s 0s ease
    span
        color middle-gray
        display block
        position relative
        font-weight 300
    &__link:hover:before
        opacity 0
    &--center 
        display flex
        justify-content center
        margin-bottom 30px
        span
            color: rgba(254, 254, 254, .5)
@media screen and (max-width: 1336px)
    .breadcumbs
        font-size 12px
        






    