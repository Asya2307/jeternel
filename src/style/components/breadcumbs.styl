.breadcumbs
    font-family default
    &__list
        display flex
        align-items center
        list-style-type none
        padding 0
    &__item
        display flex
        align-items center
        cursor pointer
        &:after
            content: '/'
            color middle-gray
            margin 0 5px
            font-size 11px
        &:last-child
            content: none
    &__link
        position relative
        color middle-gray
        &:before
            content: ''
            position absolute
            bottom: 0
            left 0
            display block
            width 100%
            height 1px
            background-color middle-gray
            opacity: 0.25
            transition: opacity 0.5s 0s ease
    &__link span
        display block
        position relative
        font-weight 400
        font-size: 12px
    &__link:hover:before
        opacity 0






    