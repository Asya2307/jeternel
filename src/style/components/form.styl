.form
    position relative
    z-index 1
    &__wrap
        background-color default-cherry
        position relative
        padding: 70px 0
        &:after
            content ''
            position absolute
            width 555px
            height 273px
            bottom 0 
            left 0
            right 0
            margin-left auto
            margin-right auto
            background-image url(../images/icons/form__pattern.png)
            background-position: center
            background-size contain
            background-repeat no-repeat
    @media phone-portrait
        &__wrap
            padding-left 20px
            padding-right 20px
            &:after
                content none
    &__inner
        width 100%
        max-width 438px
        margin-left auto
        margin-right auto
    &__box
        display flex
        flex-direction column
        margin-top 60px
    &__title
        font-size 36px
        color white
        text-align center
        width 100%
        display block
    @media phone-portrait
        &__title
            font-size 26px
    &__item
       position relative
       width 100% 
       margin-bottom 50px
       &:last-child
           margin-bottom 0
    // &__label
    //     poa
    &__input
        width 100%
        background-color transparent
        border none
        border-bottom 1px solid white 
        text-align center 
        font-family default
        font-size 15px
        color white
        padding-bottom 10px

        &::placeholder
            font-family default
            font-size 15px
            color white
            font-weight 400
.custom__checkbox
    position absolute
    width 100%
    height 100%
    opacity 0
    cursor pointer
    &-wrap
        position relative
        margin 50px 0 
        font-family serif
    &-label 
        color white
        display block
        display flex
        align-items center
        cursor pointer
        &:before
            content: ''
            display block
            width 27px
            height 27px
            border 1px solid rgba(255,255,255,0.25) 
            margin-right 10px
            transition .3s
            color default-cherry
            text-align center
            line-height 27px
