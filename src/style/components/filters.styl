.filters
    margin-top 40px
    width 100%
    overflow auto
    &__list
        display flex
        align-items center
        padding 0
        list-style-type none
    &__item
        margin-right 30px
        &:last-child
            margin-right 0
    &__button
        display block
        position relative
        padding 0
        background-color transparent
        font-size 26px
        font-family serif 
        border none
        transition .3s
        white-space nowrap
        &:after
            content: ''
            display block
            position absolute
            width 100%
            height 1px
            bottom 4px
            border-bottom 1px dashed rgba(56,47,45,0.2)
            transition: .3s
        &:hover
            color dark-cherry
            &:after
                border-bottom-color transparent
    &__select 
        max-width 412px
        width 100%
        margin-top 30px

.filter 
    background-color: white
    padding: 70px 80px
    max-width: 1283px
    &__inner 
        display flex
        margin-bottom 50px
        max-width 1238px
        position relative
        z-index 2
    @media phone-portrait
        &__inner
            flex-direction: column
    &__check
        &-inner
            margin-top 15px
    @media phone-portrait
        &__check
            &-inner
               display flex
               margin-top 0
               margin-left 20px 
    @media phone-portrait
        &__check
            &-inner
               margin-left 0px 
               margin-top 20px
    &__box
        max-width: 110px
        margin-top: 15px
        &--full
            display flex
            flex-wrap: wrap
            justify-content space-between
            padding-left 139px
            width 100%
            max-width: calc(100% - 100px)
            margin-bottom -30px
        &-title 
            font-size 15px
            font-family default
    @media phone-portrait
        &__box
            max-width: 100%
            display flex
            align-items center
            &--full
                max-width: 100%
                padding-left 0
                margin-top 40px
    @media screen and (max-width: 360px)
        &__box
            flex-direction: column


    &__button 
        display flex
        justify-content flex-end
        &-item
            width 250px
    @media phone-portrait
        &__button
            justify-content center
    @media phone
        &__button
            flex-direction: column
            align-items center
@media phone-portrait
    .filter
        padding 40px



        
        

    