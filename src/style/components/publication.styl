.publication 
    &__inner 
        margin-top 90px
    &__container
        display flex
        flex-wrap wrap
        margin-left -24px
        margin-right -24px
    @media tablet-landscape-medium
        &__container
            margin-left 0
            margin-right 0
    &__top 
        display flex
        align-items center
        justify-content space-between
        margin-bottom 36px
    &__item
        width calc(100%/3 - 48px)
        margin-right 24px
        margin-left 24px
        text-align center
        font-family default
        &:nth-child(3n)
            margin-right 0
        &--art
            position relative
            margin-bottom 90px 
    @media tablet-landscape-medium
        &__item
            width calc(100%/2 - 48px)
            margin-left 0
            margin-right 0
    @media phone-portrait
        &__item
            width 100%
        
        
    &__image 
        width 100%
        img 
            width 100%
            height 100%
            object-fit cover
        &:after 
            content ''
            float  left 
            padding-bottom 100%
    &__title 
        font-size 13px
        line-height 23px
        letter-spacing 3.12px
        display block
        margin-top 30px
        text-transform uppercase
    &__text 
        font-size 15px
        line-height 25px
        display block
        margin-top 20px
        padding-left 50px
        padding-right 50px
    @media phone-portrait
        &__text
            padding-left 0
            padding-right 0
    &__link
        text-decoration none
        color black
