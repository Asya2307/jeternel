.publication 
    &__inner 
        margin-top 90px
    &__container
        display flex
        flex-wrap wrap
        margin-left -24px
        margin-right -24px
    @media tablet-landscape-medium
        &__container
            margin-left 0
            margin-right 0
    &__top 
        display flex
        align-items center
        justify-content space-between
        margin-bottom 36px
    @media phone-portrait
        &__top 
            flex-direction: column
    &__item
        width calc(100%/3 - 48px)
        margin-right 24px
        margin-left 24px
        text-align center
        font-family default
        &:nth-child(3n)
            margin-right 0
        &--art
            position relative
            margin-bottom 90px 
    @media tablet-landscape-medium
        &__item
            width calc(100%/2 - 48px)
            margin-bottom 48px
            &:last-child 
                margin-bottom 0
    @media phone-portrait
        &__item
            width 100%
            margin-left 0
            margin-right 0
        
        
    &__image 
        width 100%
        overflow hidden
        img 
            display block
            width 100%
            height 100%
            object-fit cover
            transition: .5s
            transition-timing-function easy-in-out
    @media phone-portrait
        &__image
            width unset
            display flex
            justify-content center
            img 
                width unset
            &:after 
                content none
        
    &__title 
        font-size 13px
        line-height 23px
        letter-spacing 3.12px
        display block
        margin-top 30px
        text-transform uppercase
    &__text 
        font-size 15px
        line-height 25px
        display block
        margin-top 20px
        padding-left 50px
        padding-right 50px
    @media phone-portrait
        &__text
            padding-left 0
            padding-right 0
    &__link
        text-decoration none
        color black
        &:hover 
            .publication__image 
                img
                    transform: scale(1.05)

.hidden-xs
    display block
.hidden-lg 
    display none

@media tablet-landscape-small
    .hidden-xs
        display none
    .hidden-lg
        display block

