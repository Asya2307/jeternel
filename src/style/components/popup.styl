.popup
    &__info 
        margin-bottom 66px
        &-list 
            display flex
            list-style-type none
            padding-left 0
            font-family default
            align-items flex-start
            width 100%
            margin: 0
        &-item 
            display flex
            flex-direction: column
            align-items flex-start
            font-weight 300
            width max-content
            margin-right 40px
            &:last-child 
                margin-right 0
        &-title 
            font-size 13px
            color: #382f2d
            opacity 0.5
        &-link
            font-size 14px
            span 
                border-bottom 1px solid rgba(0,0,0,0.25)
                transition: .3s
            &:hover
                span 
                    border-bottom-color transparent
    &__close 
        margin-top 60px

    @media phone-portrait
        &__info
            &-list 
                flex-direction: column 
            &-item 
                margin-bottom 15px
                &:last-child 
                    margin-bottom 0

