.ancors
    margin-bottom 60px
    &__list
        display flex 
        align-items center
        padding-left 0 
        list-style none
        overflow auto
        width 100%
        &-item
            margin-right 28px
            white-space: nowrap
            &:last-child 
                margin-right 0
        &-button
            display block 
            padding 0 
            border none
            background-color transparent 
            text-decoration: none
            span
                font-size 24px 
                color black 
                border-bottom 1px solid transparent
                transition border-bottom-color .3s
            &:hover
                span 
                    border-bottom-color rgba(0,0,0,0.25)
