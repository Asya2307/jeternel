.em__profile 
    display flex
    align-items flex-start
    &-photo
        position relative
        display flex
        width 100%
        max-width 300px
        overflow hidden
        margin-top 12px
        img 
            width 100%
        svg  
            position absolute
            bottom: 0
            transform: translateY(50%)
            path 
                fill #fafafa
    &-inner
        display flex
        flex-direction column 
        width calc(100% - 300px) 
        color black
        padding-left 100px
        padding-right 136px
        .common__button
            max-width 380px
    &-name  
        display block
        margin-top 24px
        font-family serif 
        font-size 96px
        line-height 100px
        font-weight 300
    @media phone-portrait
        &-name
            font-size 36px
    @media phone
        &-name
            font-size 30px
            line-height 34px
            margin-bottom 60px
    &-about
        font-size 26px
        line-height 34px
        margin-top -35px
        display block
        margin-bottom 40px

@media tablet-landscape-small
    .em__profile
        flex-direction: column
        &-inner 
            width 100%
            padding-left 0
            padding-right 0
        