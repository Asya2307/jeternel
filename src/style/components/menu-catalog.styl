.nameplate 
    position fixed
    margin-top 60px
    top 0
    right 0
    background-color bright-cherry
    font-family default
    border none
    padding 21px 40px
    z-index 10
    transform rotate(-90deg) translateX(-100%) translateY(180%)
    &__desc 
        color white
        letter-spacing 3.12px
        font-size 13px

.menu__catalog 
    display none
    position fixed
    width 100%
    top 0
    left 0
    background-color #fff
    z-index 1000
    height 100vh
    &-wrap 
        position relative
        padding-top 80px
        font-family serif
    &-title 
        font-size 36px
    &-item 
        border-top 1px solid rgba(0,0,0,0.25)
        border-bottom 1px solid rgba(0,0,0,0.25)
    &-subtitle 
        font-size 26px
        line-height 30px
    &-desc 
        font-size 15px
    &-box 
        font-family default
        width calc(100%/4 - 98px)
        margin 0px 49px 40px 49px
    &-list 
        list-style-type none 
        padding-left 20px
    &-part 
        padding-bottom 10px
        &:last-child 
            padding-bottom 0
    &-link        
        color#aaaaaa
        text-decoration none
        font-size 13px
    &-inner 
        display flex
        flex-wrap wrap 
        align-items stretch
        margin-left -49px
        margin-right -49px

        

 
        
        





        