.section__bird
    background-image url(../images/about/bird.png)
    position absolute
    top 0
    left 0
    width 100%
    background-position center
    background-size cover 
    background-repeat no-repeat
    background-color #fff
    height 1124px
    overflow hidden
    &-item
        position absolute
        top 0
        left 0
        transition-delay 0s
        transform-origin left center
        animation-duration 20s
        animation-delay 0
        animation-timing-function linear
        animation-iteration-count infinite
        &--1
            animation-name fly--1
            transform: translate(32vw, 57vh)
            svg  
                animation-delay: 1s
        &--2
            animation-name fly--2
            transform: translate(32vw, 57vh)
            svg  
                animation-delay: 2s
        &--3
            transform: translate(32vw, 57vh)
            animation-name fly--3
            svg  
                animation-delay: 3s
        &--4
            animation-name fly--4
            transform: translate(32vw, 54vh)
            svg  
                animation-delay: 4s
        &--5
            animation-name fly--5
            transform: translate(32vw, 54vh)
            svg  
                animation-delay: 5s
        svg  
            transform-origin: left center
            animation-name rotate
            animation-duration 15s
            animation-timing-function ease
            animation-iteration-count infinite 
            path 
                fill #fafafa
@media screen and (max-width: 1366px)
    .section__bird
        background-position: center bottom  
        background-size: contain
        height 800px

@media tablet-hor
    .section__bird
        display none
        



    
        
                 