section.form__wrap
    form.form(action="").js-form
        .form__inner
            span.form__title Записаться на прием
            .form__box
                ul.form__group(role="none")
                    li.form__group-item
                        .form__item 
                            .location__select-wrapper.location__select-wrapper--full
                                select.location__select.location__select--light(data-choices-white)
                                    option(value="branch-01")
                                        |Онлайн-консультация1
                                    option(value="branch-02")
                                        |Онлайн-консультация2
                                    option(value="branch-03")
                                        |Онлайн-консультация3
                                    option(value="branch-04")
                                        |Онлайн-консультация5
                    li.form__group-item
                        label.form__item(for="name")
                            input(type="text" data-req name="name" autocomplete="off").form__input
                            span.form__label Имя
                    li.form__group-item
                        label.form__item
                            input(type="text" data-req name="phone" autocomplete="off").form__input.js-input-phone.js-phone-mask
                            span.form__label Телефон
                .form__checkbox
                    .custom__checkbox-wrap
                        label.custom__checkbox-label 
                            input(type="checkbox" name="checkbox").custom__checkbox.required.js-input-checkbox
                            span.custom__checkbox-check
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="11"><path fill="#fff" d="M15.158.01l.83.835L5.9 10.985l-.254-.255-.254.255-5.38-5.413.83-.834 4.805 4.834z"/></svg>
                            span.custom__checkbox-info Согласен на обработку <a href="/">персональных данных</a>
                button.common__button.common__button--gray-cherry(type="submit") Записаться

                 
